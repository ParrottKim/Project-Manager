        </Grid>

        <Grid
            Grid.Column="2"
            Grid.Row="3"
            Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel Background="#FF66808D">
                <TextBlock 
                    Text="업데이트 내역"
                    Foreground="White"
                    FontWeight="Black"
                    FontSize="20"
                    VerticalAlignment="Center"
                    Margin="10,0,0,0"/>
            </DockPanel>
            <DockPanel 
                Grid.Row="1"
                Margin="10">
                <StackPanel 
                    DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="0,6,0,0">
                    <TextBlock 
                        Text="현재 버전"
                        FontSize="16"
                        FontWeight="Bold"/>
                    <TextBlock 
                        Text="{Binding AppVersion}"
                        FontSize="16"
                        Margin="4,0,0,0"/>
                </StackPanel>
                <Rectangle 
                    DockPanel.Dock="Top"
                    Height="1"
                    Fill="LightGray"
                    Margin="10"/>
                <ScrollViewer>
                    <TextBlock 
                        Text="{Binding UpdateHistory}"
                        FontSize="16"
                        TextWrapping="WrapWithOverflow"/>
                </ScrollViewer>
            </DockPanel>
        </Grid>
    </Grid>
</UserControl>
